                            <li class="nav-header">Seguridad</li>
                            <li class=""><a href="{{ path('_admin_user_add') }}">Registrar Usuarios</a></li>
                            <li class=""><a href="{{ path('_admin_user_list') }}">Consultar Usuarios</a></li>
                            <li class=""><a href="{{ path('_admin_role_add') }}">Registrar Roles</a></li>
                            <li class=""><a href="{{ path('_admin_role_list') }}">Consultar Roles</a></li>
                            {% endif %}
                        </ul>
                    </div><!--/.well -->
                </div><!--/span-->
