                            <li class=""><a href="{{ path('_planilla_add') }}">Registrar Planillas</a></li>
                            {% endif %}
                            {% endif %}
                            {% if is_granted('ROLE_ADMINISTRADOR') or is_granted('ROLE_CONCEPTO') %}
                            <li class="nav-header">Conceptos</li>
                            <li class=""><a href="{{ path('_concepto_add') }}">Registrar Conceptos</a></li>
                            <li class=""><a href="{{ path('_concepto_list') }}">Consultar Conceptos</a></li>
                            {% endif %}
