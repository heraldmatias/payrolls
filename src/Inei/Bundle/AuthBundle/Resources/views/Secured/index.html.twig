        <div class="container-fluid" id="principal">
            <div class="row-fluid">
                <div class="span2">
                    <div class="sidebar-nav" id="menu-principal">
                        <ul class="nav nav-list">
                            {% if is_granted('ROLE_ADMINISTRADOR') or is_granted('ROLE_TOMO') %}
                            <li class="nav-header">Tomos</li>
                            <li class=""><a href="{{ path('_inventario_tomo_add') }}">Registrar Tomo</a></li>
                            <li class=""><a href="{{ path('_inventario_list') }}">Consultar Tomos</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMINISTRADOR') or is_granted('ROLE_FOLIO') %}
                            <li class="nav-header">Folios</li>
                            <li class=""><a href="{{ path('_inventario_folio_add') }}">Registrar Folio</a></li>
                            <li class=""><a href="{{ path('_inventario_folio_list') }}">Consultar Folios</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMINISTRADOR') or is_granted('ROLE_TIPO_PLANILLA')
                                 or is_granted('ROLE_SUBTPLANILLA') or is_granted('ROLE_PLANILLA') %}
