{% extends 'IneiAuthBundle::layout.html.twig' %}
{% block css %}
<style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;            
            font: 75%/1.4 "Lucida Sans",Arial,Helvetica,sans-serif;
            background-image: url("{{ asset('bundles/inei/banner_srpr.jpg') }}");
            background-repeat: no-repeat;
            background-position: center top;
            background-size: auto 138px;
        }
        
        .sidebar-nav {
            padding: 9px 0;
        }

        @media (max-width: 980px) {
            /* Enable use of floated navbar text */
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }
        #principal{
            margin-top: 100px;
        }
        .modal{
            background-color: rgb(255, 252, 238);
            }
        #menu-principal{
            background-color: rgb(255, 252, 238);
            border: 1px solid rgb(227, 227, 227);
            border-radius: 4px 4px 4px 4px;
            box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.05) inset;
            }
        table.thead.tr{

    background-color: rgb(33, 64, 116);
    color: rgb(255, 255, 255);

            }
            .row-black {
    background-color: rgb(33, 64, 116);
    color: rgb(255, 255, 255);
}
h3{
color: rgb(18, 80, 128);
font-size: 18px;
font-weight: bold;}
    </style>
    {% block csspage %}{% endblock %}
{% endblock %}
{% block content_header %}
    
{% endblock %}
