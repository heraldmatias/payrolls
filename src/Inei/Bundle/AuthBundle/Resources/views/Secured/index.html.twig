                            {% if is_granted('ROLE_ADMINISTRADOR') or is_granted('ROLE_TIPO_PLANILLA') %}
                            <li class=""><a href="{{ path('_planilla_tplanilla_add') }}">Registrar Tipo de Planilla</a></li>
                            <li class=""><a href="{{ path('_planilla_tplanilla_list') }}">Consultar Tipo de Planilla</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMINISTRADOR') or is_granted('ROLE_SUBTPLANILLA') %}
                            <li class=""><a href="{{ path('_planilla_subtplanilla_add') }}">Registrar SubTipo de Planilla</a></li>
                            <li class=""><a href="{{ path('_planilla_subtplanilla_list') }}">Consultar SubTipo de Planilla</a></li>
                            {% endif %}
