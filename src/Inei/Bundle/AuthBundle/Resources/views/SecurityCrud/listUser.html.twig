{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">
    <div class="modal">
        <div class="modal-header">
            <h3>Consultar Usuarios</h3>
        </div>
        <div class="modal-body">
            
        {% for flashMessage in app.session.flashbag.get('usuario') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
            <!--form
            <div class="row-fluid">
            <div class="span7">
            <fieldset>
                <legend>Opciones de Busqueda</legend>
                <div class="row-fluid">
                
                </div>
            </fieldset>
            </div></div>
            -->
            <h4>Listado de Usuarios</h4>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr class="row-black">
                        <th>Item</th>
                        <th>Nombres</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Activo</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in pagination %}
                    <tr {% if loop.index is odd %}class="info"{% endif %}>
                        <td>{{ loop.index }}</td>
                        <td>{{ item.nombres }}</td>
                        <td>{{ item.username }}</td>
                        <td>{{ item.email }}</td>                        
                        <td>{{ item.getActiveDisplay }}</td>                        
                        <td>
                            <a href="{{ path('_admin_user_edit', {'pk': item.id}) }}" title="Editar Tomo">
                                <i class="icon-edit"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
                </div>
            </div>
            <div class="modal-footer">
                <a href="{{ path('_admin') }}" class="btn">Cerrar</a>
            </div>
        </div>
    </div>
{% endblock %}