{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">
    {{ form_start(form) }}
    <div class="modal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Modificar Usuario</h3>
        </div>
        <div class="modal-body">
        {% for flashMessage in app.session.flashbag.get('usuario') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {{ form_errors(form) }}
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.nombres) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.nombres) }}
                    {{ form_widget(form.nombres) }}
                </div>
                <div class="span1">
                    {{ form_label(form.email) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.username) }}                    
                </div>
                <div class="span2">
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username) }}
                </div>
                <div class="span1">
                    {{ form_label(form.password) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password) }}
                </div>                
                <div class="span1">
                    {{ form_label(form.isActive) }}                    
                </div>
                <div class="span2">
                    {{ form_errors(form.isActive) }}
                    {{ form_widget(form.isActive) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.rolesCollection) }}
                </div>
                <div class="span8">
                    {{ form_errors(form.rolesCollection) }}
                    {{ form_widget(form.rolesCollection) }}
                </div>
            </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(form.save) }}
                {{ form_widget(form.saveAndAdd) }}
                <a href="{{ path('_admin') }}" class="btn">Cerrar</a>
            </div>            
        </div>
        {{ form_end(form) }}
</div>
{% endblock %}
{% block js %}
    <script type="text/javascript">
        $('form').on('submit', function(e){
            return confirm('Â¿Esta seguro que desea modificar este registro?');
        });
    </script>
{% endblock %}