{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">
    <div class="modal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Consultar Tomo de Excel</h3>
        </div>
        <div class="modal-body">
        {% for flashMessage in app.session.flashbag.get('exceltomo') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        <!--FORMUILARIO-->
            <br>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Nombre</th>
                        <th>Archivo</th>
                        <th>Descripci√≥n</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in pagination %}
                    <tr {% if loop.index is odd %}class="info"{% endif %}>
                        <td>{{ loop.index }}</td>
                        <td>{{ item.title }}</td>
                        <td><a href="{{ asset('upload/tomos/') }}{{item.filename}}">{{ item.filename }}</a></td>
                        <td>{{ item.description }}</td>
                        <td>
                            <a href="{{ path('admin_excel_edit', {'pk': item.id}) }}" title="Editar">
                                <i class="icon-edit"></i> </a>
                            <a href="javascript: process({{ item.id }})" title="Procesar">
                                <i class="icon-refresh"></i> </a>
                            <a href="{{ path('admin_excel_delete', {'pk': item.id}) }}" title="Eliminar">
                                <i class="icon-trash"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
            {{ knp_pagination_render(pagination) }}
            </div>
        </div>
            <div class="modal-footer">
                <a href="#" class="btn">Cerrar</a>
            </div>            
        </div>
</div>
{% endblock %}
{% block js %}
<script type="text/javascript">

    function process(pk){
        $.get('{{ path('admin_excel_process') }}', {'pk':pk}, function(data){
            if(data['success']){
                alert(data['data']);
            }else{
                alert(data['error']);
            }
        });
    }
    
</script>
{% endblock %}
              
