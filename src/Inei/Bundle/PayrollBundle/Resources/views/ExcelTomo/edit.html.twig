{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">              
    {{ form_start(form) }}
    <div class="modal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Modificar Tomo de Excel</h3>
        </div>
        <div class="modal-body">
        {% for flashMessage in app.session.flashbag.get('exceltomo') %}
            <div class="alert alert-{% if 'error' in flashMessage %}error{% else %}success{% endif %}">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {{ form_errors(form) }}
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.title) }}                    
                </div>
                <div class="span3">
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title) }}
                </div>
            </div>
            
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.file) }}
                </div>
                <div class="span3">
                    {{ form_errors(form.file) }}
                    {{ form_widget(form.file) }}
                </div>
            </div><br>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.description) }}
                </div>
                <div class="span8">
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>    
        </div>
            <div class="modal-footer">
                {{ form_widget(form.save) }}
                {{ form_widget(form.saveAndAdd) }}
                <a href="{{ path('_admin') }}" class="btn">Cerrar</a>
            </div>            
        </div>
        {{ form_end(form) }}
</div>
{% endblock %}
{% block js %}
    <script type="text/javascript">
        $('form').on('submit', function(e){
            return confirm('Â¿Esta seguro que desea modificar este registro?');
        });
    </script>
{% endblock %}