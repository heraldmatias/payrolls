{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">
    <div class="modal">
        <div class="modal-header">
            <h3>Consultar Tomos</h3>
        </div>
        <div class="modal-body">
            
        {% for flashMessage in app.session.flashbag.get('tomo') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
            {{ form_start(form) }}
            <div class="row-fluid">
            <div class="span7">
            <fieldset>
                <legend>Opciones de Busqueda</legend>
                <div class="row-fluid">
                <div class="span2">{{ form_label(form.codiTomo) }}</div><div class="span1"> {{ form_widget(form.codiTomo) }} </div>
                <div class="span2">{{ form_label(form.periodoTomo) }}</div><div class="span3"> {{ form_widget(form.periodoTomo) }} </div>
                </div><div class="row-fluid">
                <div class="span2">{{ form_label(form.anoTomo) }}</div><div class="span2"> {{ form_widget(form.anoTomo) }} </div>
                <div class="span1">{{ form_label(form.foliosTomo) }}</div><div class="span1">{{ form_widget(form.foliosTomo) }} </div>
                <div class="span1">{{ form_widget(form.search) }} </div>
                </div>
            </fieldset>
            </div></div>{{ form_end(form) }}
            
            <h4>Listado de tomos</h4>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr class="row-black">
                        <th>Tomo</th>
                        <th>Periodo</th>
                        <th>AÃ±o</th>
                        <th>Folios</th>                        
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for tomo in pagination %}
                    <tr {% if loop.index is odd %}class="info"{% endif %}>
                        <td>{{ tomo.codiTomo }}</td>
                        <td>{{ tomo.periodoTomo }}</td>
                        <td>{{ tomo.anoTomo }}</td>                        
                        <td>{{ tomo.foliosTomo }}</td>                        
                        <td>
                            <a href="{{ path('_inventario_tomo_edit', {'pk': tomo.codiTomo}) }}" title="Editar Tomo">
                                <i class="icon-edit"></i> </a>
                            <a href="{{ path('_inventario_tomo_delete', {'pk': tomo.codiTomo}) }}" title="Eliminar Tomo">
                                <i class="icon-trash"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
                </div>
            </div>
            <div class="modal-footer">
                <a href="{{ path('_admin') }}" class="btn">Cerrar</a>
            </div>
        </div>
    </div>
{% endblock %}