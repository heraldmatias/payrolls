{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">
    <div class="modal">
        <div class="modal-header">
            <h3>Consultar Conceptos</h3>
        </div>
        <div class="modal-body">
             {% for flashMessage in app.session.flashbag.get('concepto') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
                {{ form_start(form) }}
            <div class="row-fluid">
            <div class="span7">
            <fieldset>
                <legend>Opciones de Busqueda</legend>
                <div class="row-fluid">
                    <div class="span1">{{ form_label(form.codiConcTco) }}</div><div class="span4"> {{ form_widget(form.codiConcTco) }} </div>
                    <div class="span2">{{ form_label(form.descConcTco) }}</div><div class="span3"> {{ form_widget(form.descConcTco) }} </div>
                <div class="span1">{{ form_widget(form.search) }} </div>
                </div>
            </fieldset>
            </div></div>{{ form_end(form) }}
            <table class="table table-hover table-bordered">
                <thead>
                    <tr class="row-black">
                        <th>Item</th>
                        <th>Codigo</th>
                        <th>Descripci√≥n</th>
                        <th>Tipo</th>
                        <th>Calculo</th>
                        <th>Cta. Debe</th>
                        <th>Cta. Haber</th>
                        <th>Clase</th>
                        <th>Pago</th>
                        <th>Sede</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for tomo in pagination %}
                    <tr {% if loop.index is odd %}class="info"{% endif %}>
                        <td>{{ loop.index }}</td>
                        <td>{{ tomo.codiConcTco }}</td>
                        <td>{{ tomo.descCortTco }}</td>
                        <td>{{ tomo.getTipoConcTco_display }}</td>
                        <td>{{ tomo.getTipoCalcTco_display }}</td>
                        <td>{{ tomo.cntaDebeTco }}</td>
                        <td>{{ tomo.cntaHabeTco }}</td>
                        <td>{{ tomo.getClasConcTco_display }}</td>
                        <td>{{ tomo.getFlagPagoTco_display }}</td>
                        <td>{{ tomo.getSedeConcTco_display }}</td>
                        <td><!--- LINK A LAS PLANILLAS--->
                            <a href="{{ path('_concepto_edit', {'pk': tomo.codiConcTco}) }}" 
                               title="Editar Folio"><i class="icon-edit"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}