{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">
    <div class="modal">
        <div class="modal-header">
            <h3>Listar Tomos</h3>
        </div>
        <div class="modal-body">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Descripci√≥n</th>
                        <th>Tipo</th>
                        <th>Calculo</th>
                        <th>Cta. Debe</th>
                        <th>Cta. Haber</th>
                        <th>Clase</th>
                        <th>Pago</th>
                        <th>Sede</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for tomo in pagination %}
                    <tr {% if loop.index is odd %}class="info"{% endif %}>
                        <td><a href="{{ path('_concepto_edit', {'pk': tomo.codiConcTco}) }}">{{ tomo.codiConcTco }}</a></td>
                        <td>{{ tomo.descCortTco }}</td>
                        <td>{{ tomo.getTipoConcTco_display }}</td>
                        <td>{{ tomo.getTipoCalcTco_display }}</td>
                        <td>{{ tomo.cntaDebeTco }}</td>
                        <td>{{ tomo.cntaHabeTco }}</td>
                        <td>{{ tomo.getClasConcTco_display }}</td>
                        <td>{{ tomo.getFlagPagoTco_display }}</td>
                        <td>{{ tomo.getSedeConcTco_display }}</td>
                        <td><!--- LINK A LAS PLANILLAS--->
                            <a href="{{ path('_concepto_edit', {'pk': tomo.codiConcTco}) }}" 
                               title="Editar Folio"><i class="icon-edit"></i> </a>
                            <a href="#" title="Ver Planillas"><i class="icon-list"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}