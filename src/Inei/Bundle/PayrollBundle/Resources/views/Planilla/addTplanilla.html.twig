{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block csspage %}
<style type="text/css" >
        .folio{
            width: 50px;
        }
        .periodo{
            width: 200px;
        }
        .registros{
            width: 50px;
        }
        .planilla{
            width: 200px;
        }        
</style>
{% endblock %}
{% block form %}
<div class="span10">
    {{ form_start(form) }}
    <div class="modal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Registrar Tipo de Planilla</h3>
        </div>
        <div class="modal-body"> 
            {% for flashMessage in app.session.flashbag.get('tplanilla') %}
            <div class="alert alert-{% if 'error' in flashMessage %}error{% else %}success{% endif %}">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {{ form_errors(form) }}
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.tipoPlanTpl) }}                    
                </div>
                <div class="span2">
                    {{ form_errors(form.tipoPlanTpl) }}
                    {{ form_widget(form.tipoPlanTpl) }}
                </div>
                <div class="span1">
                    {{ form_label(form.descTipoTpl) }}                    
                </div>
                <div class="span2">
                    {{ form_errors(form.descTipoTpl) }}
                    {{ form_widget(form.descTipoTpl) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.tarjInicTpl) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.tarjInicTpl) }}
                    {{ form_widget(form.tarjInicTpl) }}
                </div>                
                <div class="span1">
                    {{ form_label(form.tarjFinaTpl) }}                    
                </div>
                <div class="span2">
                    {{ form_errors(form.tarjFinaTpl) }}
                    {{ form_widget(form.tarjFinaTpl) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.cantPeriTpl) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.cantPeriTpl) }}
                    {{ form_widget(form.cantPeriTpl) }}
                </div>                    
                <div class="span1">
                    {{ form_label(form.abrevTipoTpl) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.abrevTipoTpl) }}
                    {{ form_widget(form.abrevTipoTpl) }}
                </div>
                    
            </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(form.save) }}
                {{ form_widget(form.saveAndAdd) }}
                <a href="{{ path('_admin') }}" class="btn">Cerrar</a>
            </div>            
        </div>
        {{ form_end(form) }}
</div>
{% endblock %}
{% block js %}
    <script type="text/javascript">
        $('form').on('submit', function(e){
            return confirm('Â¿Esta seguro que desea guardar este registro?');
        });
    </script>
{% endblock %}