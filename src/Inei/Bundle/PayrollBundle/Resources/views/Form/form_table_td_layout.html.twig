{% use "form_div_layout.html.twig" %}

{% block form_row %}
{% spaceless %}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
{% endspaceless %}
{% endblock form_row %}

{% block button_row %}
{% spaceless %}    
    {{ form_widget(form) }}
{% endspaceless %}
{% endblock button_row %}

{% block hidden_row %}
{% spaceless %}    
    <span style="display: none">
        {{ form_widget(form) }}
    </span>    
{% endspaceless %}
{% endblock hidden_row %}

{% block form_widget_compound %}
{% spaceless %}    
    {% if form.parent is empty and errors|length > 0 %}    
    {{ form_errors(form) }}
    {% endif %}    
    {{ block('form_rows') }}    
    {{ form_rest(form) }}    
{% endspaceless %}
{% endblock form_widget_compound %}