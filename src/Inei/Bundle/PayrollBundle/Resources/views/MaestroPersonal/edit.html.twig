{% extends 'IneiAuthBundle:Secured:index.html.twig' %}
{% block form %}
<div class="span10">
    {{ form_start(form) }}
    <div class="modal">
        <div class="modal-header">
            
            <h3>Modificar Personal</h3>
        </div>
        <div class="modal-body">
             {% for flashMessage in app.session.flashbag.get('personal') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
           {{ form_errors(form) }}
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.apePatPer) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.apePatPer) }}
                    {{ form_widget(form.apePatPer) }}
                </div>
                <div class="span1">
                    {{ form_label(form.apeMatPer) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.apeMatPer) }}
                    {{ form_widget(form.apeMatPer) }}
                </div>                
            </div>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.nomEmpPer) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.nomEmpPer) }}
                    {{ form_widget(form.nomEmpPer) }}
                </div>
                <div class="span1">
                    {{ form_label(form.librElecPer) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.librElecPer) }}
                    {{ form_widget(form.librElecPer) }}
                </div>  
            </div>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.nombCortPer) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.nombCortPer) }}
                    {{ form_widget(form.nombCortPer) }}
                </div>  
                <div class="span1">
                    {{ form_label(form.dirEmpPer) }}
                </div>
                <div class="span2">
                    {{ form_errors(form.dirEmpPer) }}
                    {{ form_widget(form.dirEmpPer) }}
                </div>                
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.save) }}
            {{ form_widget(form.saveAndAdd) }}
            <a href="#" class="btn">Cerrar</a>
        </div>        
    </div>
        {{ form_end(form) }}
</div>
{% endblock %}